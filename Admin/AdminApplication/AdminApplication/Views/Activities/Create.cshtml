@using AdminApplication.Models.DTO
@using AdminApplication.Models.Enums
@model CreateActivityFormDto

<nav class="navbar navbar-expand-lg mb-3">
    <div class="">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Projects" asp-action="Details" asp-route-projectId="@Model.ProjectId">Детали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-route-projectId="@Model.ProjectId">Активности</a>
            </li>
        </ul>
    </div>
</nav>

@if(Model.ConsultantProjects == null || !Model.ConsultantProjects.Any())
{
    <p>Не можете да креирате активност! На проектот не работи ниту еден консултант.</p>
}
else
{
    <form method="post" asp-action="Create" asp-route-projectId="@Model.ProjectId">
        <div class="card">
            <div class="card-header bg-opacity-50 bg-primary d-flex justify-content-between">
                <h5 class="mb-0">Додади нова активност</h5>
                <button type="submit" class="btn btn-dark">Зачувај</button>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Title -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Наслов:</label>
                        <input type="text" class="form-control" asp-for="Activity.Title" required />
                    </div>

                    <!-- Status -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Статус:</label>
                        <select class="form-control" asp-for="Activity.Status" asp-items="@(new SelectList(Enum.GetValues(typeof(ActivityStatus))))">
                            <option value="" selected disabled>-- Изберете статус --</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <!-- Start Date -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Почетен датум:</label>
                        <input type="datetime-local" class="form-control" asp-for="Activity.StartDate" />
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Краен датум:</label>
                        <input type="datetime-local" class="form-control" asp-for="Activity.EndDate" />
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label class="fw-bold">Опис:</label>
                    <textarea class="form-control" asp-for="Activity.Description" rows="4"></textarea>
                </div>

                <div class="row">
                    <!-- Assigned Consultant -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Задолжен консултант:</label>
                        <select id="ConsultantProjectId" class="form-control" asp-for="Activity.ConsultantProjectId">
                            <option value="" disabled selected>-- Изберете консултант --</option>
                            @foreach (var c in Model.ConsultantProjects)
                            {
                                <option value="@c.Id">@c.Consultant?.User.FirstName @c.Consultant?.User.LastName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>


}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


