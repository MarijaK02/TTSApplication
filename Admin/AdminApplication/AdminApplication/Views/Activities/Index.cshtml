@using AdminApplication.Models.DTO
@using AdminApplication.Models.Enums
@model ActivityListDto

<nav class="navbar navbar-expand-lg mb-3">
    <div class="">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Projects" asp-action="Details" asp-route-projectId="@Model.ProjectId">Детали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active">Активности</a>
            </li>
        </ul>
    </div>
</nav>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" asp-route-projectId="@Model.ProjectId" class="btn btn-outline-primary d-flex align-items-center">
        <i class="bi bi-plus-circle-dotted me-2"></i> Нова активност
    </a>
</div>

<form method="get" asp-action="Index">
    <input type="hidden" name="projectId" value="@Model.ProjectId" />

    <div class="d-flex justify-content-between mb-3">
        <div class="d-flex w-50 me-5">
            <input type="text" name="searchTerm" class="form-control me-2 w-75" placeholder="@(Model.SearchTerm ?? "Пребарај по наслов")" value="@Context.Request.Query["search"]" />
            <button type="submit" name="action" class="btn btn-dark w-25">
                <i class="bi bi-search"></i> Пребарај
            </button>
        </div>

        <div class="w-25 d-flex justify-content-end me-3">
            <select class="form-control" name="selectedStatus" onchange="this.form.submit()">
                <option vlaue="" selected disabled>---Селектирај статус---</option>
                <option value="">Сите</option>
                @foreach (var status in Enum.GetValues(typeof(ActivityStatus)))
                {
                    <option value="@status" selected="@(Model.SelectedStatus == (ActivityStatus)status ? "selected" : null)">
                        @status.ToString()
                    </option>
                }
            </select>
        </div>
        <div class="w-25 d-flex justify-content-end">
            <select class="form-control" name="selectedConsultantId" onchange="this.form.submit()">
                <option vlaue="" selected disabled>---Селектирај консултант---</option>
                <option value="">Сите</option>
                @foreach (var c in Model.ProjectConsultants)
                {
                    <option value="@c.Id" selected="@(Model.SelectedConsultantId == c.Id ? "selected" : null)">
                        @c.Consultant?.User.FirstName @c.Consultant?.User.LastName
                    </option>
                }
            </select>
        </div>
    </div>
</form>


<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Наслов</th>
            <th>Статус</th>
            <th>Почетен датум</th>
            <th>Краен рок</th>
            <th>Задолжен</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr onclick="location.href='@Url.Action("Details", new { projectId = Model.ProjectId,  activityId = activity.Id })'">
                <td>@(Model.Activities.IndexOf(activity) + 1)</td>
                <td>@activity.Title</td>
                <td>@activity.Status</td>
                <td>@activity.StartDate.ToString()</td>
                <td>@(activity.EndDate.ToString() ?? "N/A")</td>
                <td>@activity.ConsultantProject?.Consultant?.User.FirstName @activity.ConsultantProject?.Consultant?.User.LastName</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-activityId="@activity.Id" asp-route-projectId="@Model.ProjectId" onclick="event.stopPropagation()"><i class="bi bi-trash3"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>



