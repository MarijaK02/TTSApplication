@using AdminApplication.Models.DTO
@using AdminApplication.Models.Enums
@model ActivityDto

<nav class="navbar navbar-expand-lg mb-3">
    <div class="">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Projects" asp-action="Details" asp-route-projectId="@Model.ProjectId">Детали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-route-projectId="@Model.ProjectId">Активности</a>
            </li>
        </ul>
    </div>
</nav>

<div class="card shadow-sm">
    <form asp-action="EditActivity" method="post">
        <input type="hidden" name="Id" value="@Model.Activity.Id" />
        <input type="hidden" name="ProjectId" value="@Model.ProjectId" />

        <div class="card-header bg-opacity-50 bg-primary d-flex justify-content-between">
            <h5 class="mb-0">Детали за активноста</h5>
            <button type="submit" class="btn btn-dark">Зачувај</button>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Title -->
                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Наслов:</label>
                    <input type="text" class="form-control" name="Title" value="@Model.Activity.Title" required />
                </div>

                <!-- Status -->
                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Статус:</label>
                    <select class="form-control" name="Status">
                        @foreach (var s in Enum.GetValues(typeof(ActivityStatus)))
                        {
                            <option value="@s" selected="@(Model.Activity.Status == (ActivityStatus)s ? "selected" : null)">
                                @s.ToString()
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-3">
                    <label class="fw-bold">Дата на креирање:</label>
                    <input type="datetime-local" class="form-control"
                           value="@Model.Activity.CreatedOn.ToString("yyyy-MM-ddTHH:mm")"
                           disabled />
                </div>

                <div class="col-md-3 mb-3">
                    <label class="fw-bold">Дата на комплетирање:</label>
                    <input type="datetime-local" class="form-control"
                           value="@Model.Activity.CompletedOn?.ToString("yyyy-MM-ddTHH:mm")"
                           disabled />
                </div>

            </div>

            <div class="row">
                <!-- Start Date -->
                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Почетен датум:</label>
                    <input type="datetime-local" class="form-control" name="StartDate"
                           value="@Model.Activity.StartDate.ToString("yyyy-MM-ddTHH:mm")" required />
                </div>

                <!-- End Date -->
                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Краен рок:</label>
                    <input type="datetime-local" class="form-control" name="EndDate"
                           value="@Model.Activity.EndDate.ToString("yyyy-MM-ddTHH:mm")" required/>
                </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="fw-bold">Опис:</label>
                <textarea class="form-control" name="Description" rows="10">@Model.Activity.Description</textarea>
            </div>

            <div class="row">
                <!-- Assigned Consultant -->
                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Задолжен консултант:</label>
                    <p class="form-control-plaintext">
                        @Model.Activity.ConsultantProject?.Consultant?.User.FirstName
                        @Model.Activity.ConsultantProject?.Consultant?.User.LastName

                        @((int)(DateTime.Now - Model.Activity.StartDate).TotalHours / 24) дена
                        @((int)(DateTime.Now - Model.Activity.StartDate).TotalHours % 24) часа / 
                        @((int)(DateTime.Now - Model.Activity.StartDate).TotalHours) часа
                    </p>
                </div>
            </div>
        </div>
    </form>

    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


