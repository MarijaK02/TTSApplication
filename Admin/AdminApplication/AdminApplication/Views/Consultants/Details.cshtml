@using AdminApplication.Models.DTO
@using AdminApplication.Models.Enums
@model ConsultantDto

<div class="my-4">
    <div class="card shadow-sm w-50">
        <form asp-action="EditConsultant" method="post">
            <div class="card-header bg-opacity-50 bg-primary d-flex justify-content-between">
                <h5 class="mb-0">Детали за консултантот</h5>
                <button type="submit" class="btn btn-dark">Зачувај</button>
            </div>
            <div class="card-body">

                <input type="hidden" asp-for="Consultant.Id" />
                <input type="hidden" asp-for="Consultant.User.UserName" />
                <input type="hidden" asp-for="Consultant.UserId" />
                <input type="hidden" asp-for="Consultant.User.Id" />

                <div class="row mb-2">
                    <label class="col-5 fw-bold">Име:</label>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="Consultant.User.FirstName" required />
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-5 fw-bold">Име:</label>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="Consultant.User.LastName" required />
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-5 fw-bold">Е-маил:</label>
                    <div class="col-7">
                        <input type="email" class="form-control" asp-for="Consultant.User.Email" required />
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-5 fw-bold">Контакт тел.:</label>
                    <div class="col-7">
                        <input type="tel" class="form-control" asp-for="Consultant.User.PhoneNumber" required />
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-5 fw-bold">Експертиза:</label>
                    <div class="col">
                        <select class="form-control" asp-for="Consultant.Expertise">
                            @foreach (var e in Enum.GetValues(typeof(Expertise)))
                            {
                                <option value="@e" selected="@(Model.Consultant.Expertise == (Expertise)e ? "selected" : null)">
                                    @e.ToString()
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </form>

    </div>

    <div class="mt-4">
        <h5>Проекти</h5>
        @if (Model.Projects != null && Model.Projects.Any())
        {
            <div class="table-responsive">
                <table class="table table striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Статус на апликација</th>
                            <th>Дата на аплицирање</th>
                            <th>Наслов</th>
                            <th>Статус</th>
                            <th>Почетен датум</th>
                            <th>Краен рок</th>
                            <th>Вкупно активности</th>
                            <th>Нови активности</th>
                            <th>Активни активности</th>
                            <th>Сработени активности</th>
                            <th>Невалидни активности</th>
                            <th>Вкупно сработено време</th>
                            <th>Вкупно сработено време (часови)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Projects)
                        {
                            <tr onclick="location.href='@Url.Action("Details", "Projects", new { projectId = item.Project.ProjectId })'">
                                <td>@item.Project.ApplicationStatus</td>
                                <td>@item.Project.DateApplied</td>
                                <td>@item.Project.Project?.Title</td>
                                <td>@item.Project.Project?.Status</td>
                                <td>@item.Project.Project?.StartDate.ToShortDateString()</td>
                                <td>@(item.Project.Project?.EndDate.ToShortDateString())</td>
                                <td>@(item.TotalConsultantActivites)</td>
                                <td>@(item.TotalConsultantNewActivities)</td>
                                <td>@(item.TotalConsultantActiveActivites)</td>
                                <td>@(item.TotalConsultantNewActivities)</td>
                                <td>@(item.TotalConsultantInvalidActivities)</td>
                                <td>@(item.TotalHoursWorkingOnProject / 24) дена @(item.TotalHoursWorkingOnProject % 24) часа</td>
                                <td>@(item.TotalHoursWorkingOnProject)</td>
                                <td>
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal" onclick="event.stopPropagation();">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                    <div class="modal fade" tabindex="-1" id="myModal">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Дали сте сигурни дека сакате да продолжите со акцијата?</h5>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Со клик на копчето потврди ќе го избришете објекотт заскогаш!</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a      class="btn btn-secondary"
                                                            data-bs-dismiss="modal"
                                                            onclick="event.stopPropagation();"
                                                            asp-action="Details" asp-route-consultantId="@Model.Consultant.Id">
                                                        Откажи
                                                    </a>
                                                    <form asp-action="DeleteProjectFromConsultant" method="post">
                                                        <input type="hidden" name="consultantId" value="@Model.Consultant.Id" />
                                                        <input type="hidden" name="consultantProjectId" value="@item.Project.Id" />
                                                        <button type="submit" class="btn btn-danger" onclick="event.stopPropagation();">Потврди</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Консултантот нема проекти на кои работи или за кои аплицирал.</p>
        }
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
