<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-secondary text-white p-4 col-md-3 col-lg-2 min-vh-100">
            <h4 class="mb-4">Админ Апликација</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Clients" asp-action="Index">
                        <i class="bi bi-person-lines-fill"></i> Регистрирани клиенти
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Consultants" asp-action="Index">
                        <i class="bi bi-person-check-fill"></i> Регистрирани консултанти
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Projects" asp-action="Index">
                        <i class="bi bi-briefcase-fill"></i> Проекти
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">
            <nav class="navbar px-3 rounded-4 mb-3" style="background-color: #e3f2fd;">
                <div>
                    <h2 class="h4">Систем Трансфер на Технологии</h2>
                </div>

                <div class="d-flex">
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <!-- Main Body -->
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - AdminApplication - <a href="#" class="text-muted">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
