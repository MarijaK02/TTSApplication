@using AdminApplication.Models.DTO.API
@using AdminApplication.Models.Enums
@model DetailsProjectDto

<nav class="navbar navbar-expand-lg mb-3">
    <div class="">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active">Детали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Activities" asp-action="Index" asp-route-projectId="@Model.Project.Id">Активности</a>
            </li>
        </ul>
    </div>
</nav>


@* Deatils *@
<div class="card shadow-sm w-75">
    <form asp-action="EditProject" method="post">
        <div class="card">
            <div class="card-header bg-opacity-50 bg-primary d-flex justify-content-between">
                <h5 class="mb-0">Детали за проектот</h5>
                <button type="submit" class="btn btn-dark">Зачувај</button>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="Project.Id" />

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="fw-bold">Клиент:</label>
                        <input class="form-control" style="max-width: 200px;"
                               value="@Model.Project.CreatedBy?.User.FirstName @Model.Project.CreatedBy?.User.LastName" disabled />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="fw-bold">Дата на креирање:</label>
                        <input type="date" class="form-control" asp-for="Project.CreatedOn" disabled/>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="fw-bold">Дата на комплетирање:</label>
                        <input type="date" class="form-control" asp-for="Project.CompletedOn" disabled />
                    </div>
                </div>

                <div class="row">
                    <!-- Title -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Наслов:</label>
                        <input type="text" class="form-control" asp-for="Project.Title" required />
                    </div>

                    <!-- Expertise -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Експертиза:</label>
                        <select class="form-control" asp-for="Project.Expertise" asp-items="@(new SelectList(Enum.GetValues(typeof(Expertise))))">
                            <option value="" disabled>-- Изберете експертиза --</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <!-- Status -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Статус:</label>
                        <select class="form-control" asp-for="Project.Status" asp-items="@(new SelectList(Enum.GetValues(typeof(ProjectStatus))))">
                            <option value="" disabled>-- Изберете статус --</option>
                        </select>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Дата на почеток:</label>
                        <input type="date" class="form-control" asp-for="Project.StartDate" required />
                    </div>
                </div>

                <div class="row">
                    <!-- End Date -->
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Краен рок:</label>
                        <input type="date" class="form-control" asp-for="Project.EndDate" />
                    </div>

                    <div class="row col-md-6">
                        <!-- Number of Consultants Working -->
                        <div class="col-md-3 mb-3">
                            <label class="fw-bold">Консултанти (активни):</label>
                            <input type="number" class="form-control text-center" style="max-width: 80px;"
                                   value="@Model.Project.ConsultantProjects?.Count(cp => cp.ApplicationStatus == ApplicationStatus.Accepted)" disabled />
                        </div>

                        <!-- Number of Applicants -->
                        <div class="col-md-3 mb-3">
                            <label class="fw-bold">Консултанти (аплицирани):</label>
                            <input type="number" class="form-control text-center" style="max-width: 80px;"
                                   value="@Model.Project.ConsultantProjects?.Count(cp => cp.ApplicationStatus == ApplicationStatus.Applied)" disabled />
                        </div>
                    </div>
                </div>               

                <!-- Description -->
                <div class="mb-3">
                    <label class="fw-bold">Опис:</label>
                    <textarea class="form-control" asp-for="Project.Description" rows="10"></textarea>
                </div>
            </div>
        </div>
    </form>



</div>


@* Applications *@
<div class="row my-4">
    <div class="col">
        <h4 class="mb-4">Апликации</h4>
        @if (Model.Project.ConsultantProjects!.Where(cp => cp.ApplicationStatus == ApplicationStatus.Applied).Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Дата на аплицирање</th>
                        <th>Име</th>
                        <th>Презиме</th>
                        <th>Е-маил</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var project in Model.Project.ConsultantProjects!.Where(cp => cp.ApplicationStatus == ApplicationStatus.Applied))
                    {
                        <tr onclick="location.href='@Url.Action("Details", "Consultants", new { consultantId = project.ConsultantId })'">
                            <td>@project.DateApplied</td>
                            <td>@project.Consultant?.User.FirstName</td>
                            <td>@project.Consultant?.User.LastName</td>
                            <td>@project.Consultant?.User.Email</td>
                            <td>
                                <a class="btn btn-success" asp-action="AcceptApplication" asp-route-applicationId="@project.Id" asp-route-projectId="@Model.Project.Id"><i class="bi bi-check2"></i></a>
                                <a class="btn btn-danger" asp-action="RejectApplication" asp-route-applicationId="@project.Id" asp-route-projectId="@Model.Project.Id"><i class="bi bi-x"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h6>Нема апликации</h6>
        }

    </div>

    <div class="col">
        <h4 class="mb-4">Консултанти кои работат на проектот</h4>

        <form method="post" asp-action="AddConsultantToProject" asp-route-projectId="@Model.Project.Id">
            <p class="alert alert-info d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                Консултантите дадени за избор ја имаат истата експертиза како и експертизата на проектот.
                Доколку сакате да додадете консултант изберете еден и кликнете на копчето "Додади".
            </p>
            <div class="d-flex justify-content-between mb-3">                
                <select class="form-control me-2" name="consultantId">
                    <option value="" selected disabled>-- Изберете консултант --</option>
                    @if (Model.Consultants != null)
                    {
                        @foreach (var c in Model.Consultants)
                        {
                            <option value="@c.Id">@c.User.FirstName @c.User.LastName</option>
                        }
                    }
                </select>
                <button class="btn btn-dark" type="submit">Додади</button>
            </div>
        </form>

        @if (Model.Project.ConsultantProjects!.Where(cp => cp.ApplicationStatus == ApplicationStatus.Accepted).Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Име</th>
                        <th>Презиме</th>
                        <th>Е-маил</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Project.ConsultantProjects!.Where(cp => cp.ApplicationStatus == ApplicationStatus.Accepted))
                    {
                        <tr onclick="location.href='@Url.Action("Details", "Consultants", new { consultantId = project.ConsultantId })'">
                            <td>@project.Consultant?.User.FirstName</td>
                            <td>@project.Consultant?.User.LastName</td>
                            <td>@project.Consultant?.User.Email</td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal" onclick="event.stopPropagation();">
                                    <i class="bi bi-trash3"></i>
                                </button>
                                <div class="modal fade" tabindex="-1" id="myModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Дали сте сигурни дека сакате да продолжите со акцијата?</h5>
                                            </div>
                                            <div class="modal-body">
                                                <p>Со клик на копчето потврди ќе го избришете објекотт заскогаш!</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a class="btn btn-secondary"
                                                   data-bs-dismiss="modal"
                                                   onclick="event.stopPropagation();"
                                                   asp-action="Details" asp-route-projectId="@project.ProjectId">
                                                    Откажи
                                                </a>
                                                <form asp-action="DeleteConsultantFromProject" method="post">
                                                    <input type="hidden" value="@project.Id" name="consultantProjectId" />
                                                    <input type="hidden" value="@Model.Project.Id" name="projectId" />
                                                    <button type="submit" class="btn btn-danger" onclick="event.stopPropagation();">Потврди</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h6>Нема консултанит кои работат на проектот</h6>
        }

    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
