@using AdminApplication.Models.DTO
@using AdminApplication.Models.Enums
@model ProjectsIndexDto

<div class="my-4">
    <div class="d-flex justify-content-between">
        <h4 class="mb-4">Проекти</h4>
        <a asp-action="Create" class="btn btn-outline-primary d-flex align-items-center h-75">
            <i class="bi bi-plus-circle-dotted me-2"></i> Нов проект
        </a>
    </div>

    <form method="get" asp-action="Index">
        <div class="d-flex justify-content-between mb-3">
            <div class="d-flex w-50 me-5">
                <input type="text" name="searchTerm" class="form-control me-2 w-75" placeholder="@(Model.SearchTerm ?? "Пребарај по наслов")" value="@Context.Request.Query["search"]" />
                <button type="submit" name="action" class="btn btn-dark w-25">
                    <i class="bi bi-search"></i> Пребарај
                </button>
            </div>

            <div class="w-50 d-flex justify-content-end">
                <select class="form-control me-5" name="selectedExpertise" onchange="this.form.submit()">
                    <option vlaue="" selected disabled>---Селектирај експертиза---</option>
                    <option value="">Сите</option>
                    @foreach (var expertise in Html.GetEnumSelectList(typeof(Expertise)))
                    {
                        <option value="@expertise.Value" selected="@(Model.SelectedExpertise != null && (int)Model.SelectedExpertise == int.Parse(expertise.Value) ? "selected" : null)">
                            @expertise.Text
                        </option>
                    }
                </select>

                <select class="form-control" name="selectedStatus" onchange="this.form.submit()">
                    <option vlaue="" selected disabled>---Селектирај статус---</option>
                    <option value="">Сите</option>
                    @foreach (var status in Enum.GetValues(typeof(ProjectStatus)))
                    {
                        <option value="@status" selected="@(Model.SelectedStatus == (ProjectStatus)status ? "selected" : null)">
                            @status.ToString()
                        </option>
                    }
                </select>
            </div>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Наслов</th>
                <th>Експертиза</th>
                <th>Статус</th>
                <th>Почетен датум</th>
                <th>Краен рок</th>
                <th>Клиент</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr onclick="location.href='@Url.Action("Details" + project.Id)'">
                    <td>@(Model.Projects.IndexOf(project) + 1)</td>
                    <td>@project.Title</td>
                    <td>@project.Expertise</td>
                    <td>@project.Status</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@(project.EndDate.ToShortDateString())</td>
                    <td>@(project.CreatedBy?.User.FirstName)</td>
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal" onclick="event.stopPropagation();">
                            <i class="bi bi-trash3"></i>
                        </button>
                        <div class="modal fade" tabindex="-1" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Дали сте сигурни дека сакате да продолжите со акцијата?</h5>
                                    </div>
                                    <div class="modal-body">
                                        <p>Со клик на копчето потврди ќе го избришете објекотт заскогаш!</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a class="btn btn-secondary"
                                                data-bs-dismiss="modal"
                                                onclick="event.stopPropagation();"
                                                asp-action="Index">
                                            Откажи
                                        </a>
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" value="@project.Id" name="projectId" />
                                            <button type="submit" class="btn btn-danger" onclick="event.stopPropagation();">Потврди</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
