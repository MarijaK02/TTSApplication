@using TTS.Domain.Enum
@model TTS.Domain.DTO.CreateAndEditProjectDto

@{
    ViewData["Title"] = "Create";
    var expertises = Html.GetEnumSelectList<Expertise>();
}

<div class="container mt-4">

    <div class="d-flex">
        <div class="me-2">
            <a asp-action="MyProjects" class="btn btn-outline-warning border border-2 border-warning"><i class="bi bi-arrow-left fw-bolder"></i></a>
        </div>
        <h3>Креирај нов проект</h3>
    </div>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Create">
                <div class="form-group mb-2 col-md-4">
                    <label asp-for="Title" class="control-label">Наслов</label>
                    <input asp-for="Title" class="form-control" required/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 col-md-4">
                    <label asp-for="Expertise" class="control-label">Експертиза</label>
                    <select asp-for="Expertise" class="form-control" required>
                        <option value="" disabled selected>Select expertise</option>
                        @foreach (var expertise in expertises)
                        {
                            <option value="@expertise.Value">@expertise.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Expertise" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description" class="control-label">Опис</label>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                </div>
                <div class="form-group mb-2 col-md-4">
                    <label asp-for="StartDate" class="control-label">Почетен датум</label>
                    <input name="StartDate" class="form-control" type="date" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 col-md-4">
                    <label asp-for="EndDate" class="control-label">Краен рок</label>
                    <input name="EndDate" class="form-control" type="date" required/>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group my-3 mb-2">
                    <input type="submit" value="Зачувај" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

  
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}