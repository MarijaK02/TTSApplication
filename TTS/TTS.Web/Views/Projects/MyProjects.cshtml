@using TTS.Domain.Enum
@model List<TTS.Domain.DTO.GetProjectDto>

@{
    ViewData["Title"] = "Сите проекти";
}

<div class="container-fluid my-4">
    <div class="row">
        @if (User.IsInRole("Client"))
        {
            <div class="col-md-3">
                <form method="get" asp-action="MyProjects">
                    <div class="mb-3 d-flex">
                        <input type="text" name="searchTerm" class="form-control me-2 w-75 h-75" placeholder="Пребарај по име на проект" value="@Context.Request.Query["search"]" />
                        <button type="submit" name="action" class="btn btn-outline-primary w-25 h-75">
                            <i class="bi bi-search"></i> Пребарај
                        </button>
                    </div>


                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Филтрирај</h5>
                        </div>
                        <button type="submit" name="action" value="filter" class="btn btn-secondary mx-3 mt-3">
                            Филтрирај
                        </button>
                        <div class="card-body">
                            @foreach (var expertise in Html.GetEnumSelectList<Expertise>())
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="expertiseList" value="@expertise.Value" id="@expertise"
                                    />
                                    <label class="form-check-label" for="@expertise">
                                            @expertise.Text
                                    </label>
                                </div>
                            }

                            <div class="mt-3">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        }



        <!-- Main Content -->
        <div class="col-md-9 container">
           
            <!-- Existing Content -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-capitalize">Мои проекти</h4>
                @if (User.IsInRole("Client"))
                {
                    <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
                        <i class="bi bi-plus-circle-dotted me-2"></i> Креирај нов
                    </a>
                }
            </div>
            @if (User.IsInRole("Consultant"))
            {
                <form method="get" asp-action="MyProjects">
                    <div class="mb-3 d-flex w-100">
                        <input type="text" name="searchTerm" class="form-control me-2 w-75" placeholder="Пребарај по име на проект" value="@Context.Request.Query["search"]" />
                        <button type="submit" name="action" class="btn btn-outline-primary w-25">
                            <i class="bi bi-search"></i> Пребарај
                        </button>
                    </div>
                </form>
            }

            @if (!Model.Any())
            {
                <hr />
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center p-4 border border-secondary border-dashed rounded-3 bg-light">
                        <i class="fas fa-tasks" style="font-size: 50px; color: #999;"></i>
                        <h2 class="mt-3 text-muted">Нема проекти</h2>
                        @if (User.IsInRole("Client"))
                        {
                            <p class="text-secondary">
                                Започни со креирање на проекти или контактирај го админот на е-маил <strong>admin@admin.com</strong>!
                            </p>
                        }
                        else
                        {
                            <p class="text-secondary">
                                Аплицирај за работа на проекти во делот <strong>Сите проекти</strong> и започни со работа!
                            </p>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th><i class="bi bi-bookmark"></i> Проект</th>
                                <th>Експертиза</th>
                                <th>Статус</th>
                                <th>Вкупно активности</th>
                                <th>Краен рок</th>
                                <th>Одговорни</th>
                                @if (User.IsInRole("Consultant"))
                                {
                                    <th>Вкупно време</th>
                                    <th>Мои активности</th>
                                }
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                var statusClass = project.Project.Status switch
                                {
                                    TTS.Domain.Enum.ProjectStatus.New => "text-info",
                                    TTS.Domain.Enum.ProjectStatus.InProgress => "text-warning",
                                    TTS.Domain.Enum.ProjectStatus.Invalid => "text-danger",
                                    _ => "text-success"
                                };

                                var projectTime = (project.TotalHours / 24) + " денови " + (project.TotalHours % 24) + " часови";                                

                                <tr onclick="location.href='@Url.Action("Details", new { id = project.Project.Id })'">
                                    <td>@(Model.IndexOf(project) + 1)</td>
                                    <td class="fw-medium">@project.Project.Title</td>
                                    <td>@project.Project.Expertise</td>
                                    <td class="@statusClass">@Html.DisplayFor(model => project.Project.Status)</td>
                                    <td>@project.TotalActivites</td>
                                    <td>@(project.Project.EndDate?.ToShortDateString() ?? "-")</td>
                                    <td>@project.NumConsultants</td>

                                    @if (User.IsInRole("Consultant"))
                                    {
                                        var hoursClass = "text-danger";
                                        @if(project.TotalExpectedHours > project.TotalHours)
                                        {
                                            hoursClass = "";
                                        }
                                        <td class="@hoursClass">@projectTime</td>
                                        <td>@project.NumOfConsultantActivites</td>
                                    }
                                    <td class="text-end">
                                        @if (User.IsInRole("Client"))
                                        {
                                            <a asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Project.Id"
                                               class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash3"></i> Избриши
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>