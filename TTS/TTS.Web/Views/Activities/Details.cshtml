@using TTS.Domain.Enum
@model TTS.Domain.DTO.ActivityDto

@{
    ViewData["Title"] = "Details";
}

<nav class="navbar navbar-expand-lg bg-body-secondary border-bottom border-warning shadow-lg mb-5">
    <div class="container-fluid">
        <div class="navbar-brand truncate-one-row fw-bold fs-5" style="width: 23%; display: block">

            @Model.ProjectTitle
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse fs-5" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a asp-controller="Projects"
                   asp-action="Details"
                   asp-route-id="@Model.ProjectId"
                   class="nav-link fw-medium">
                    Детали
                </a>
                <a asp-controller="Activities"
                   asp-action="Index"
                   asp-route-projectId="@Model?.ProjectId"
                   asp-route-projectTitle="@Model?.ProjectTitle"
                   class="nav-link fw-medium">
                    Активности
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="container-fluid w-75">
    <div class="">

        <div class="d-flex justify-content-between mb-3">
            <h4>@Html.DisplayFor(model => model.Activity!.Title)</h4>
            <div>
                @if (User.IsInRole("Consultant") && User.Identity?.Name == Model?.OwnerEmail)
                {
                    <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.Activity!.Id" 
                    asp-route-projectId="@Model.ProjectId" asp-route-projectTitle="@Model.ProjectTitle"
                       asp-route-from="@Model.ProjectDeadline.From.ToString("yyyy-MM-dd")" asp-route-to="@Model.ProjectDeadline.To.ToString("yyyy-MM-dd")">Промени</a>
                }               
            </div>            
        </div>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Креирана на</dt>
            <dd class="col-sm-10">@Model.Activity.CreatedOn.ToString()</dd>
            <dt class="col-sm-2">Опис</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.Description)</dd>

            <dt class="col-sm-2">Статус</dt>

            <dd class="col-sm-10 text-@(Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.New ? "primary" :
                Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.Active ? "warning" :
                Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.Invalid ? "danger" :
                "success")">
                @Html.DisplayFor(model => model.Activity!.Status)
            </dd>

            <dt class="col-sm-2">Време Од</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.StartDate)</dd>

            <dt class="col-sm-2">Време До</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.EndDate)</dd>
            <dt class="col-sm-2">Завршена на</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.CompletedOn)</dd>
        </dl>
    </div>
    @if (Model.Activity.Status != ActivityStatus.Completed && Model.TotalActiveHours > Model.TotalExpectedHours)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            Активноста ги надминува очекуваните работни саати за @((Model.TotalActiveHours - Model.TotalExpectedHours) / 24)  дена и   @((Model.TotalActiveHours - Model.TotalExpectedHours) % 24) часа!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if(Model.Activity.Status == ActivityStatus.Completed && Model.Activity.EndDate < Model.Activity.CompletedOn)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            @{
                var total = (int)(Model.Activity.CompletedOn - Model.Activity.EndDate)?.TotalHours;
            }

            Активноста е комплетирана @(total / 24) дена и @(total % 24) часа подоцна од крајниот рок!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model.Activity.EndDate.Date > Model.ProjectDeadline.To.Date)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            Зададениот рок на активноста не се совпаѓа со периодот на траење на проектот!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model.Activity.EndDate.Date == DateTime.Today.Date)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            Крајниот рок на активноста е денес!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Comment Section -->
    <hr class="my-5" />

    <h4 class="mb-4 fw-bold">
        <i class="bi bi-chat-dots me-2 text-primary"></i>Коментари
    </h4>

    <!-- Add Comment Form -->
    <form asp-action="AddComment" asp-controller="Activities" enctype="multipart/form-data" method="post"
          class="mb-5 border rounded-4 shadow-sm p-4 bg-light-subtle">
        <input type="hidden" name="projectId" value="@Model?.ProjectId" />
        <input type="hidden" name="id" value="@Model?.Activity.Id" />
        <input type="hidden" name="projectTitle" value="@Model?.ProjectTitle" />
        <input type="hidden" name="from" value="@Model?.ProjectDeadline.From.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="to" value="@Model.ProjectDeadline.To.ToString("yyyy-MM-dd")" />

        <div class="mb-3">
            <label for="CommentBody" class="form-label fw-semibold">Внеси коментар</label>
            <textarea class="form-control rounded-3" id="CommentBody" name="CommentBody" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label for="formFileMultiple" class="form-label fw-semibold">Прикачи документи</label>
            <input class="form-control rounded-3" type="file" id="formFileMultiple" name="files" multiple>
        </div>

        <button type="submit" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-send me-2"></i>Постирај
        </button>
    </form>

    <!-- Comments Display Section -->
    <div id="comments-container" class="mb-5">
        @for (int i = 0; i < Model.Comments.Count; i++)
        {
            var item = Model.Comments[i];
            <div class="card border-0 shadow-sm mb-3 comment rounded-4" data-index="@i">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="fw-bold mb-1">@item.CreatedBy?.FirstName @item.CreatedBy?.LastName</h6>
                            <small class="text-muted">
                                @item.CreatedOn.ToString("G", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </small>
                        </div>
                        @if (item.CreatedBy.UserName == User!.Identity!.Name)
                        {
                            <form method="post" asp-action="DeleteComment" asp-route-commentId="@item.Id" class="ms-3">
                                <input hidden value="@Model.Activity.Id" name="activityId" />
                                <input hidden value="@Model.ProjectId" name="projectId" />
                                <input hidden value="@Model.ProjectTitle" name="projectTitle" />
                                <input type="hidden" name="from" value="@Model?.ProjectDeadline.From.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="to" value="@Model.ProjectDeadline.To.ToString("yyyy-MM-dd")" />
                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        }
                    </div>

                    <p class="mt-3 mb-2">@item.CommentBody</p>

                    @if (item.Attachments != null && item.Attachments.Any())
                    {
                        <div class="mt-3">
                            <h6 class="fw-semibold mb-2">
                                <i class="bi bi-paperclip me-1"></i>Додадени документи:
                            </h6>
                            <div class="row g-3">
                                @foreach (var attachment in item.Attachments)
                                {
                                    <div class="col-md-3">
                                        <div class="border rounded-3 p-2 bg-white shadow-sm d-flex flex-column align-items-start">
                                            <div class="text-truncate w-100">
                                                <i class="bi bi-file-earmark me-2"></i>@attachment.FileName
                                            </div>
                                            <div class="d-flex gap-2 mt-2">
                                                <a asp-action="Download" asp-controller="Activities"
                                                   asp-route-fileId="@attachment.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                                @if (item.CreatedBy.UserName == User.Identity.Name)
                                                {
                                                    <form method="post" asp-action="RemoveFile" asp-route-fileId="@attachment.Id">
                                                        <input hidden name="projectId" value="@Model.ProjectId" />
                                                        <input hidden name="id" value="@Model.Activity.Id" />
                                                        <input hidden name="projectTitle" value="@Model.ProjectTitle" />
                                                        <input type="hidden" name="from" value="@Model?.ProjectDeadline.From.ToString("yyyy-MM-dd")" />
                                                        <input type="hidden" name="to" value="@Model.ProjectDeadline.To.ToString("yyyy-MM-dd")" />
                                                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i></button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

</div>

