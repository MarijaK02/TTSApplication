@using TTS.Domain.Enum
@model TTS.Domain.DTO.ActivityDto

@{
    ViewData["Title"] = "Details";
    int sectionSize = 5;
}

<nav class="navbar navbar-expand-lg bg-body-secondary border-bottom border-warning shadow-lg mb-5">
    <div class="container-fluid">
        <div class="navbar-brand truncate-one-row fw-bold fs-5" style="width: 23%; display: block">

            @Model.ProjectTitle
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse fs-5" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a asp-controller="Projects"
                   asp-action="Details"
                   asp-route-id="@Model.ProjectId"
                   class="nav-link fw-medium">
                    Детали
                </a>
                <a asp-controller="Activities"
                   asp-action="Index"
                   asp-route-projectId="@Model?.ProjectId"
                   asp-route-projectTitle="@Model?.ProjectTitle"
                   class="nav-link fw-medium">
                    Активности
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="container-fluid w-75">
    <div class="">

        <div class="d-flex justify-content-between mb-3">
            <h4>@Html.DisplayFor(model => model.Activity!.Title)</h4>
            <div>
                @if (User.IsInRole("Consultant"))
                {
                    <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.Activity!.Id" 
                    asp-route-projectId="@Model.ProjectId" asp-route-projectTitle="@Model.ProjectTitle" 
                    asp-route-from="@Model.ProjectDeadline.From" asp-route-asp-protocol="@Model.ProjectDeadline.To">Промени</a>
                }               
            </div>            
        </div>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Креирана на</dt>
            <dd class="col-sm-10">@Model.Activity.CreatedOn.ToString()</dd>
            <dt class="col-sm-2">Опис</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.Description)</dd>

            <dt class="col-sm-2">Статус</dt>

            <dd class="col-sm-10 text-@(Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.New ? "primary" :
                Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.Active ? "warning" :
                Model?.Activity.Status == TTS.Domain.Enum.ActivityStatus.Invalid ? "danger" :
                "success")">
                @Html.DisplayFor(model => model.Activity!.Status)
            </dd>

            <dt class="col-sm-2">Време Од</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.StartDate)</dd>

            <dt class="col-sm-2">Време До</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.EndDate)</dd>
            <dt class="col-sm-2">Завршена на</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Activity!.CompletedOn)</dd>
        </dl>
    </div>
    @if (Model.Activity.Status != ActivityStatus.Completed && Model.TotalActiveHours > Model.TotalExpectedHours)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            Активноста ги надминува очекуваните работни саати за @((Model.TotalActiveHours - Model.TotalExpectedHours) / 24)  дена и   @((Model.TotalActiveHours - Model.TotalExpectedHours) % 24) часа!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if(Model.Activity.Status == ActivityStatus.Completed && Model.Activity.EndDate < Model.Activity.CompletedOn)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            @{
                var total = (int)(Model.Activity.CompletedOn - Model.Activity.EndDate)?.TotalHours;
            }

            Активноста е комплетирана @(total / 24) дена и @(total % 24) часа подоцна од крајниот рок!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model.Activity.EndDate > Model.ProjectDeadline.To)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-3"></i>
            Зададениот рок на активноста не се совпаѓа со периодот на траење на проектот!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <hr />

    <!-- Comment Section -->
    <input type="hidden" value="@sectionSize" id="sectionSize" />
    <h4>Коментари</h4>

    <!-- Add Comment Form -->
    <form asp-action="AddComment" asp-controller="Activities" enctype="multipart/form-data" method="post" class="mb-5 border p-4 bg-light rounded">
        <input type="hidden" name="projectId" value="@Model?.ProjectId" />
        <input type="hidden" name="id" value="@Model?.Activity.Id" />
        <input type="hidden" name="projectTitle" value="@Model?.ProjectTitle" />
        <input type="hidden" name="projectDeadline" value="@Model?.ProjectDeadline" />

        <div class="form-group mb-3">
            <label for="CommentBody">Внеси коментар</label>
            <textarea class="form-control" id="CommentBody" name="CommentBody" rows="3" required></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="formFileMultiple">Прикачи документи</label>
            <input class="form-control" type="file" id="formFileMultiple" name="files" multiple>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Постирај</button>
    </form>

    <!-- Comments Display Section -->
    <div id="comments-container" class="mb-5">
        @for (int i = 0; i < (Model.Comments.Count > sectionSize ? sectionSize : Model.Comments.Count); i++)
        {
            var item = Model.Comments[i];
            <div class="card mb-3 comment" data-index="@i">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5>@item.CreatedBy?.FirstName @item.CreatedBy?.LastName</h5>
                        <span class="text-muted">@item.CreatedOn.ToLongDateString() @item.CreatedOn.ToLongTimeString()</span>
                    </div>
                    @if (item.CreatedBy.UserName == User!.Identity!.Name)
                    {
                        <div class="d-flex">
                            <form method="post" asp-action="DeleteComment" asp-route-commentId="@item.Id">
                                <button class="btn btn-outline-danger btn-sm" type="submit"><i class="bi bi-trash3"></i></button>
                                <input hidden value="@Model.Activity.Id" name="activityId"/>
                                <input hidden value="@Model.ProjectId" name="projectId"/>
                                <input hidden value="@Model.ProjectTitle" name="projectTitle"/>
                                <input hidden value="@Model.ProjectDeadline" name="projectDeadline"/>
                            </form>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <p class="card-text">@item.CommentBody</p>
                </div>
                <div class="card-footer bg-light">
                    @if (item.Attachments != null && item.Attachments.Any())
                    {
                        <h6>Attachments:</h6>
                        <div class="row">
                            @foreach (var attachment in item.Attachments)
                            {
                                <div class="col-md-2 mb-3">
                                    <div class="card">
                                        <div class="card-body p-3">
                                            <h5 class="card-title"><i class="bi bi-file-earmark"></i> @attachment.FileName</h5>
                                            <p class="card-text text-muted">Type: @attachment.FileName.Split(".")[1]</p>
                                            <div class="d-flex justify-content-between">
                                                <a asp-action="Download" asp-controller="Activities" asp-route-fileId="@attachment.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                                @if (item.CreatedBy.UserName == User.Identity.Name)
                                                {
                                                    <form method="post" asp-action="RemoveFile" asp-route-fileId="@attachment.Id">
                                                        <input hidden name="projectId" value="@Model.ProjectId"/>
                                                        <input hidden name="id" value="@Model.Activity.Id"/>
                                                        <input hidden name="projectTitle" value="@Model.ProjectTitle"/>
                                                        <input hidden value="@Model.ProjectDeadline" name="projectDeadline" />
                                                        <button class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i></button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Show More Button -->
    @if (Model.Comments.Count > sectionSize)
    {
        <div class="d-flex justify-content-end">
            <button id="show-more-btn" class="btn btn-success mt-3 mb-3" data-total-count="@Model.Comments.Count">
                Прикажи повеќе
            </button>
        </div>
    }
</div>

<script>
    const comments = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Comments,
        new Newtonsoft.Json.JsonSerializerSettings
        {
            ReferenceLoopHandling = Newtonsoft.Json.ReferenceLoopHandling.Ignore
        })
        );

    const sectionSize = parseInt(document.getElementById("sectionSize").value);
    const totalComments = comments.length;
    const commentsContainer = document.getElementById("comments-container");
    const showMoreBtn = document.getElementById("show-more-btn");

    showMoreBtn?.addEventListener("click", function () {
        const currentCommentCount = commentsContainer.getElementsByClassName("comment").length;

        if (currentCommentCount < totalComments) {
            for (let i = currentCommentCount; i < Math.min(currentCommentCount + sectionSize, totalComments); i++) {
                const item = comments[i];
                const commentHtml = `
                        <div class="card mb-3 comment" data-index="${i}">
                            <div class="card-header d-flex justify-content-between">
                                <div>
                                    <h5>${item.CreatedBy.FirstName} ${item.CreatedBy.LastName}</h5>
                                    <span class="text-muted">${new Date(item.CreatedOn).toLocaleString()}</span>
                                </div>
                                <div>
                                    <button class="btn btn-outline-success btn-sm"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3"></i></button>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">${item.CommentBody}</p>
                            </div>
                        </div>`;
                commentsContainer.insertAdjacentHTML("beforeend", commentHtml);
            }

            if (commentsContainer.getElementsByClassName("comment").length >= totalComments) {
                this.disabled = true;
                this.innerText = "Сите коментари се прикажани";
            }
        }
    });
</script>
