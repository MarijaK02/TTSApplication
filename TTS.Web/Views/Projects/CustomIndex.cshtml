@model IEnumerable<TTS.Domain.DTO.GetProjectDto>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-row justify-content-between mb-5 mt-4">
    <h1 class="text-capitalize">My Projects</h1>

    @if (User.IsInRole("Client"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    }

</div>

<div class="container-fluid mx-5">
    <div class="row d-flex flex-row px-2">
        @foreach (var item in Model)
        {
            <div class="col-3 card border-3 border-warning-subtle me-5 mb-5" style="width: 30rem;">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-4">
                            <img class="img-thumbnail rounded border border-3" src="https://cdn.pixabay.com/photo/2024/05/26/10/15/bird-8788491_640.jpg" />
                        </div>
                        <div class="col-8">
                            <h5 class="card-title truncate-two-rows">@Html.DisplayFor(modelItem => item.Project.Title)</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary truncate-one-row">@Html.DisplayFor(modelItem => item.Project.Expertise)</h6>
                            @switch (item.Project.Status)
                            {
                                case TTS.Domain.Enum.ProjectStatus.New:
                                    <h6 class="card-subtitle mb-2 text-success text-info">@Html.DisplayFor(modelItem => item.Project.Status)</h6>
                                    break;
                                case TTS.Domain.Enum.ProjectStatus.Accepted:
                                    <h6 class="card-subtitle mb-2 text-success text-primary">@Html.DisplayFor(modelItem => item.Project.Status)</h6>
                                    break;
                                case TTS.Domain.Enum.ProjectStatus.InProgress:
                                    <h6 class="card-subtitle mb-2 text-success text-warning">@Html.DisplayFor(modelItem => item.Project.Status)</h6>
                                    break;
                                case TTS.Domain.Enum.ProjectStatus.Invalid:
                                    <h6 class="card-subtitle mb-2 text-success text-danger">@Html.DisplayFor(modelItem => item.Project.Status)</h6>
                                    break;
                                case TTS.Domain.Enum.ProjectStatus.Completed:
                                    <h6 class="card-subtitle mb-2 text-success text-success">@Html.DisplayFor(modelItem => item.Project.Status)</h6>
                                    break;
                            }
                        </div>
                    </div>

                    <p class="card-text truncate-three-rows mb-4">
                        @Html.DisplayFor(modelItem => item.Project.Description)
                    </p>
                    <div class="d-flex flex-row justify-content-between align-itmes-center">
                        <div class="d-flex flex-row">
                            <p class="card-link align-self-center me-2">Total Hours: </p><p>@Html.DisplayFor(modelItem => item.Project.TotalHours)</p>
                        </div>

                        <div class="d-flex flex-row">
                            <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Project.Id" class="card-link btn btn-secondary text-warning d-flex">
                                See more <i class="bi bi-arrow-right align-self-center ms-2"></i>
                            </a>
                            @if (User.IsInRole("Client"))
                            {
                                <a asp-controller="Projects" asp-action="Delete" asp-route-id="@item.Project.Id" class="card-link btn btn-danger text-light d-flex">
                                    <i class="bi bi-trash3 align-self-center me-2"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

