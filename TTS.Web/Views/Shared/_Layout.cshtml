@using Microsoft.AspNetCore.Identity
@inject SignInManager<TTS.Domain.Identity.TTSApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TTS.Web.styles.css" asp-append-version="true" />

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
        crossorigin="anonymous">
    <link 
        rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <title>@ViewData["Title"] - TTS.Web</title>
</head>
<body class="bg-gradient d-flex flex-column" style="width: 100vw">
    <div class="sticky-top" style="width: 100%">
            <nav class="navbar navbar-dark bg-dark shadow-lg p-3">
                <div class="container-fluid shadow-lg">

                    <div class="d-flex w-25 justify-content-start align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <button class="btn btn-outline-warning w-auto h-50 me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                                <i class="bi bi-boxes"></i>
                            </button>
                        }
                          
                        <p class="text-light text-capitalize fw-normal fs-2 navbar-brand mb-0 pb-0">Систем трансфер за технологии</p>
                    </div>
                    
                    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                        <div class="offcanvas-header bg-info">
                            <h5 class="offcanvas-title text-opacity-75 text-black text-capitalize" id="offcanvasDarkNavbarLabel">Систем трансфер за технологии</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="d-flex flex-column justify-content-between offcanvas-body bg-dark">
                            <ul class="navbar-nav nav-pills ">
                                @if (User.IsInRole("Consultant"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Projects" asp-action="Index">
                                            <i class="bi bi-folder"></i>
                                            Сите проекти
                                            </a>
                                    </li>
                                } 
                               
                                    <li class="nav-item">
                                    <a class="nav-link" asp-controller="Projects" asp-action="CustomIndex">
                                        <i class="bi bi-grid"></i>
                                            Мои проекти
                                    </a>
                                    </li>                                                                                            
                            </ul>
                            <footer class="footer border-top pt-3 pb-5">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link text-light p-2">
                                            <i class="bi bi-box-arrow-left"></i>
                                            Одјави се
                                        </button>
                                    </form>
                                }
                            </footer>
                        </div>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>

    <div style="height: 80vh; max-width: 100%; flex: 1" class="pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-white border-top mt-auto">
        <div class="container">
            &copy; 2024 - FINKI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>


</html>
